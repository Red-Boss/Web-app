@model MebelWeb.Models.Ingridient

@* @{
    ViewData["Title"] = "Добавление";
} *@

<h1>Добавление</h1>

<h4>Ингридиенты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="produkcia" class="control-label">Продукция</label>
                @*<select asp-for="produkcia" class="form-control" asp-items="ViewBag.produkcia"></select>  *@
                <h3 asp-for="produkcia" class="control-label">@ViewBag.produkciaId?.Naimenovanie</h3>
                <input asp-for="produkcia" value="@ViewBag.produkciaId?.ID" type="hidden" class="control-label" />
                <span asp-validation-for="produkcia" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="syrio" class="control-label">Сырьё</label>
                <select asp-for="syrio" class="form-control" asp-items="ViewBag.syrio"></select>
                <span asp-validation-for="syrio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label">Количество</label>
                <input asp-for="Count" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-produkciaFilter="@ViewBag.produkciaId?.ID">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
