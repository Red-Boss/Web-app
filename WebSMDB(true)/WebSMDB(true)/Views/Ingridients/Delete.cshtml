@model MebelWeb.Models.Ingridient

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Ингридиенты</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Продукция
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.produkciaId.Naimenovanie
        </dd>
        <dt class = "col-sm-2">
            Сырьё
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Syrio.Naimenovanie_materiala)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-produkciaFilter="@ViewBag.produkciaId.ID">Назад</a>
    </form>
</div>
