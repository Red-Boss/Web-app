@model MebelWeb.Models.Ingridient

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Ингридиенты</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Продукция
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.produkciaId.Naimenovanie
        </dd>
        <dt class = "col-sm-2">
            Сырьё
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Syrio.Naimenovanie_materiala)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Изменить</a> |
    <a asp-action="Index" asp-route-produkciaFilter="@ViewBag.produkciaId.ID">Назад</a>
</div>
