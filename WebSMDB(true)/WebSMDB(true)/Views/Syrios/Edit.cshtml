@model MebelWeb.Models.Syrio

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Сырьё</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Naimenovanie_materiala" class="control-label">Наименование материала</label>
                <input asp-for="Naimenovanie_materiala" class="form-control" />
                <span asp-validation-for="Naimenovanie_materiala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="edinica_izmerenia" class="control-label">Единица измерения</label>
                <select asp-for="edinica_izmerenia" class="form-control" asp-items="ViewBag.edinica_izmerenia"></select>
                <span asp-validation-for="edinica_izmerenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label">Количество</label>
                <input asp-for="Count" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label">Сумма</label>
                <input asp-for="Sum" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
