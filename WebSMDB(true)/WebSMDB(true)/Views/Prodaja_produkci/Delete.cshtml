@model MebelWeb.Models.Prodaja_produkci

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить?</h3>
<div>
    <h4>Prodaja_produkci</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Продукция
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.produkcia)
        </dd>
        <dt class="col-sm-2">
            Количество
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class="col-sm-2">
            Сумма
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
        <dt class="col-sm-2">
            Сотрудник
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FIO)
        </dd>
    </dl>
    
