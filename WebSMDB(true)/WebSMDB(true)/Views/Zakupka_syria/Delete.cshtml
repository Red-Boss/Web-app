    <h4>Закупка сырья</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Сырьё
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Syrio.ID)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            Сумма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
        <dt class = "col-sm-2">
